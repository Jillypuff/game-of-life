{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "lib": ["ES2020"],
    "target": "ES2020",
    "tsBuildInfoFile": "./dist/.tsbuildinfo-node"
  },
  "include": ["vite.config.ts", "eslint.config.js"]
}
